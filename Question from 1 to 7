Question No 4:

#include <stdio.h>

int main() {
    // Declare variable to store the temperature
    float temperature;

    // Prompt the user to enter the temperature
    printf("Enter the temperature: ");
    
    // Read the temperature from the keyboard
    scanf("%f", &temperature);

    // Check if the temperature is below or above the freezing point (0 degrees Celsius)
    if (temperature < 0) {
        printf("The temperature is below freezing point.\n");
    } else {
        printf("The temperature is above freezing point.\n");
    }

    return 0;
}

------------------------------------------

Question No 5:

#include <stdio.h>

int main() {
    // Declare variables to store temperatures
    float fahrenheit, celsius;

    // Prompt the user to enter the temperature in Fahrenheit
    printf("Enter the temperature in Fahrenheit: ");
    
    // Read the temperature from the keyboard
    scanf("%f", &fahrenheit);

    // Convert Fahrenheit to Celsius using the formula: (F - 32) * 5/9
    celsius = (fahrenheit - 32) * 5 / 9;

    // Display the result
    printf("%.2f Fahrenheit is %.2f Celsius.\n", fahrenheit, celsius);

    return 0;
}

--------------------------------------------

Question No 6:

#include <stdio.h>

int main() {
    // Declare variables to store lengths
    float feet, centimeters;

    // Prompt the user to enter the length in feet
    printf("Enter the length in feet: ");
    
    // Read the length from the keyboard
    scanf("%f", &feet);

    // Convert feet to centimeters using the conversion factor: 1 foot = 30.48 centimeters
    centimeters = feet * 30.48;

    // Display the result
    printf("%.2f feet is equal to %.2f centimeters.\n", feet, centimeters);

    return 0;
}

